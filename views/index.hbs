<div class="editor-section">
  <div class="col-md-12" id="editor-functions">
    <div class="col-md-4 columns">
      <ul id="clear-functions">
        <li><button id="clear-canvas" type="button" name="button">Clear</button></li>
      </ul>
    </div>

    <div class="col-md-4 columns text-center">
      <ul id="line-sizes" class="list-inline text-center">
        <li id="decrease-line-size" data-line-size="-1"><img src="images/minus.svg" alt="decrease line size"></li>
        <li id="increase-line-size" data-line-size="1"><img src="images/plus.svg" alt="increase line size"></li>
      </ul>
      <p id="line-size-display"></p>
    </div>

    <div class="col-md-4 columns">
      <ul id="line-colors" class="list-inline text-center">
        <li class="background-red" id="red"></li>
        <li class="background-green" id="green"></li>
        <li class="background-blue" id="blue"></li>
        <li class="background-purple" id="purple"></li>
        <li class="background-orange" id="orange"></li>
        <li class="background-black" id="black"></li>
      </ul>
    </div>
  </div>

  <canvas id="canvas"></canvas>
</div>
